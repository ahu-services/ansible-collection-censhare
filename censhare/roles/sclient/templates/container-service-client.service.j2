[Unit]
Description=Podman Service Client Container
Wants=network-online.target
After=network-online.target
RequiresMountsFor=%t/containers

[Service]
Environment=PODMAN_SYSTEMD_UNIT=%n
Restart=always
TimeoutStopSec=70
ExecStart=/usr/bin/podman run \
  --cidfile=%t/%n.ctr-id \
  --cgroups=no-conmon \
  --rm \
  --sdnotify=conmon \
  --replace \
  --name service-client \
  --network host \
  --env REPO_USER={{ censhare_sclient_repo_user }} \
  --env REPO_PASS={{ censhare_sclient_repo_pass }} \
  --env VERSION={{ censhare_sclient_censhare_version }} \
  --env SVC_USER={{ censhare_sclient_svc_user }} \
  --env SVC_INSTANCES={{ censhare_sclient_instances }} \
  --env SVC_PASS={{ censhare_sclient_svc_pass }} \
  --env SVC_HOST={{ censhare_sclient_svc_host }} \
  --env OFFICE_URL={{ censhare_sclient_office_url | default('http://localhost:9980/cool/convert-to/pdf') }} \
  --env FFMPEG_TIMEOUT=1800 \
  --volume /opt/iccprofiles:/iccprofiles \
  -d docker.io/ahuservices/cs-image-tools:{{ censhare_sclient_tools_version }}
ExecStop=/usr/bin/podman stop --ignore -t 10 --cidfile=%t/%n.ctr-id
ExecStopPost=/usr/bin/podman rm -f --ignore -t 10 --cidfile=%t/%n.ctr-id
Type=notify
NotifyAccess=all

[Install]
WantedBy=default.target