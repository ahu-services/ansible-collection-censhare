[Unit]
Description=Podman Collabora CODE Container
Wants=network-online.target
After=network-online.target
RequiresMountsFor=%t/containers

[Service]
Environment=PODMAN_SYSTEMD_UNIT=%n
Restart=always
TimeoutStopSec=70
ExecStart=/usr/bin/podman run \
  --cidfile=%t/%n.ctr-id \
  --cgroups=no-conmon \
  --rm \
  --sdnotify=conmon \
  --replace \
  --name {{ censhare_sclient_collabora_name }} \
  --network {{ censhare_sclient_container_network | default('censhare') }} \
  --env extra_params={{ censhare_sclient_collabora_extra_params | default('--o:ssl.enable=false') }} \
  --detach=true \
  {{ censhare_sclient_collabora_image | default('collabora/code') }}:{{ censhare_sclient_collabora_version }}
ExecStop=/usr/bin/podman stop --ignore -t 10 --cidfile=%t/%n.ctr-id
ExecStopPost=/usr/bin/podman rm -f --ignore -t 10 --cidfile=%t/%n.ctr-id
Type=notify
NotifyAccess=all

[Install]
WantedBy=default.target
